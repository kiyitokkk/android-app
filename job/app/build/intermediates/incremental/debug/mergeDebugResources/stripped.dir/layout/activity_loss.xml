<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="43dp"
        android:paddingRight="31dp"
        android:layout_marginTop="258dp"
        android:background="#ffffff"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/account_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="@string/account_hint"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:background="#e8e7e7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/account_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="输入该帐号绑定的邮箱"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:background="#e8e7e7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/verity" />

                <EditText
                    android:id="@+id/account_verity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:background="#e8e7e7" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/passwd" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="输入新的密码"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#bcbcbc" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sendemail_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:text="发送验证码"
            android:textSize="24sp"
            android:layout_height="55dp"
            android:background="@drawable/shape_login"
            />
        <Button
            android:id="@+id/verity_edit"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="确认修改"
            android:textSize="24sp"
            android:layout_height="55dp"
            android:background="@drawable/shape_register"
            />

    </LinearLayout>

</RelativeLayout>