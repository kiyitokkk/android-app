<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#3F9FE0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_search_box"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="298dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:hint="搜索你感兴趣的视频"
                android:textColor="@color/black"
                android:textColorHint="#737373"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/search_video"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/search" />
        </LinearLayout>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#3F9FE0"
        android:orientation="vertical"
        android:layout_height="60dp">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/slidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_indicator_height="3dp"
            tl:tl_textSelectColor="#000000"
            tl:tl_textUnselectColor="@color/white"
            tl:tl_textsize="16sp"
            tl:tl_indicator_width="17dp"/>
    </LinearLayout>
    <com.example.job.view.FixedViewpager
        android:id="@+id/fixedViewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
</LinearLayout>